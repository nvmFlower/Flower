<div class="container">
<% if !@order_item.nil? && @order_item.errors.any? %>
  <ul>
    <% @order_item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<% if !@order_items.nil? %>
  <% @order_items.each do |item| %>
    <div class="well">
      <div class="row">

        <div class="col-sm-1"> <%= image_tag Product.find_by(id: item.product.id).img.url, class: "img-pr text-center" %>
        </div>

        <div class="col-sm-2">
          <h3><%= item.product.name %></h3>
        </div>
        <div class="col-sm-9">
          <%= form_for(item, remote: true) do |f| %>
            <%= f.hidden_field :product_id, value: item.product.id %>
            <div class="col-sm-1">  <h5><%= item.product.price %></h5></div>

            <div class="col-sm-2">
              <%= f.number_field :quantity, value: item.quantity.to_i, min: 1, class: 'form-control' %>
            </div>
             <span cl>Total Price: <%= item.total_price %></span>
            <div class="btn-group">
              <%= f.submit "Update Quantity", class: 'btn btn-primary' %>
              <%= link_to "Delete", item, method: :delete, remote: true, class: 'btn btn-danger'  %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% else %>

<% end %>
<%= link_to "Thanh Toan", carts_url, style: "color: red;" %>
<h1 id="cart" class="cart pull-right">Tong tien <%= "#{current_order.subtotal}" %></h1>

</div>

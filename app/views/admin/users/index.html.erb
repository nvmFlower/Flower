<ol class="breadcrumb">
  <li class="breadcrumb-item">
  <%= link_to "Users", admin_users_url %>
  </li>
  <li class="breadcrumb-item active"><%= t ".user" %></li>
</ol>
<div class="card-body">
  <div class="table-responsive">
    <table class="table table-bordered" cellspacing="0">
      <thead>
        <tr>
          <%= render "headerTable" %>
        </tr>
      </thead>

      <tbody>
        <% @users.each_with_index do |item, index| %>
        <tr>
          <td><%= create_index params[:page], index, Settings.page %></td>
          <td><%= item.name %></td>
          <td><%= item.email %></td>
          <td><%= item.address %></td>
          <td><%= item.phone %></td>
          <td><%= item.is_admin %></td>
          <td><%= item.created_at %></td>
          <td><%= item.updated_at %></td>
          <td><%= link_to t("delete"), class:"btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

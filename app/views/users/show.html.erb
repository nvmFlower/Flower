<% provide :title, t(".title") %>
<div id="fh5co-product">
  <div class="container">
    <div class="row animate-box pad">
      <div class="col-md-12 margin-bottom ">
      <h3 class="title-cart border-bot"><%= t ".personal_information" %></h3>
      <table class="table table-responsive table-striped">
        <thead>
          <tr>
            <th><%= t ".name" %></th>
            <th><%= t ".email" %></th>
            <th><%= t ".address" %></th>
            <th><%= t ".number-phone" %></th>
          </tr>
        </thead>
        <tr>
          <td><%= current_user.name %></td>
          <td><%= current_user.email %></td>
          <td><%= current_user.address %></td>
          <td><%= current_user.phone %></td>
          <td>
            <%= button_tag "", class: "icon-pencil btn btn-danger" %>
            <%=button_tag "", class: "btn btn-success icon-square-check" %>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-md-12">
      <h3 class="title-cart border-bot"><%= t ".history" %></h3>
      <div class="content">
        <table class="table table-striped table-responsive">
          <thead>
            <tr>
              <th><%= t ".id_bill" %></th>
              <th><%= t ".address" %></th>
              <th><%= t ".date_order" %></th>
              <th><%= t ".date_delivery" %></th>
              <th><%= t ".total" %></th>
              <th><%= t ".status" %></th>
            </tr>
          </thead>
          <tbody>
            <% @order.each do |t| %>
            <tr>
              <td>
                <%= t.id %>
              </td>
              <td><%= t.address %></td>
              <td><%= t.date_order %></td>
              <td><%= t.date_delivery %></td>
              <td><%= t.total %></td>
              <% if !t.status %>
                <td>
                  <div class="btn-group">
                  <%= button_tag type: "button", class: "btn btn-danger" do %>
                  <%= t ".inpay" %>
                  <% end %>
                  <%= button_tag type:"button", class:"btn btn-danger", data: {toggle: "collapse", target: "#order-items"}, aria: {haspopup: "true", expanded: "false"}  do %>
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                  <% end %>
                  </div>
                </td>
                <% else %>
                 <td>
                  <%= button_tag type: "button", class: "btn btn-success" do %>
                  <%= t ".pay" %>
                  <% end %>
                </td>
              <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>


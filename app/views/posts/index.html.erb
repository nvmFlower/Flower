<% provide :title, t(".list") %>
<%= render "layouts/slide" %>
<div id="fh5co-product">
  <div class="container">
    <div class="row animate-box">
       <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
        <h2><%= t ".list" %></h2>
      </div>
    </div>
    <div class="row">
      <% @posts.each do |p| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= image_tag p.img %>
          <div class="caption">
            <h3><%= p.title %></h3>
            <p>
              <%= link_to t(".more"), post_path(p), class: "btn btn-primary",
               role: "button" %>
            </p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <%= paginate @posts %>
  </div>
</div>



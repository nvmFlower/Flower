<%= form_for :session , html: {class: "container"} do |f| %>
  <div class="inputGroup inputGroup1">
    <%= f.label :email %>
    <%= f.text_field :email %>
    <span class="indicator"></span>
  </div>
  <div class="inputGroup inputGroup2">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="inputGroup inputGroup3">
    <%= button_tag "Đăng nhập", name: "commit" %>
  </div>
  <div class="inputGroup inputGroup3">
    <%= link_to "Creat Account", signup_path %>
  </div>
<% end %>




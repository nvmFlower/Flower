<% provide :title, t(".title") %>
<%= render "layouts/slide" %>
<div id="fh5co-product">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1 animate-box">
        <div class="owl-carousel owl-carousel-fullwidth product-carousel owl-fix">
          <div class="item">
            <div class="active text-center">
              <figure>
                <%= image_tag @product.img, alt: "img-1", class: "image-detail" %>
              </figure>
            </div>
          </div>
          <div class="item">
            <div class="active text-center">
              <figure>
                <%= image_tag @product.img, alt: "img-2", class: "image-detail" %>
              </figure>
            </div>
          </div>
          <div class="item">
            <div class="active text-center">
              <figure>
                <%= image_tag @product.img, alt: "img-3", class: "image-detail" %>
              </figure>
            </div>
          </div>
        </div>
        <div class="row animate-box">
          <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
            <h2><%= @product.name %></h2>
            <p>
              <%= form_for :session, url: {controller: "carts", action: "create"} do |f| %>
                <%= f.hidden_field :product_id, value: @product.id %>
                <%= f.submit "Add to cart", class: 'btn btn-primary btn-sm' %>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="fh5co-tabs animate-box">
          <ul class="fh5co-tab-nav">
            <li class="active">
              <%= link_to "#", data: {tab: "1"} do %>
              <span class="icon visible-xs"><i class="icon-file"></i></span><span class="hidden-xs"><%= t(".self") %></span>
              <% end %>
            </li>
            <li>
              <%= link_to "#", data: {tab: "2"} do %>
              <span class="icon visible-xs"><i class="icon-star"></i></span><span class="hidden-xs"><%= t(".feedback") %></span>
              <% end %>
            </li>
          </ul>

          <!-- Tabs -->
          <div class="fh5co-tab-content-wrap">
            <div class="fh5co-tab-content tab-content active detail" data-tab-content="1">
              <div class="col-md-10 col-md-offset-1">
                <span class="price">price: $<%= @product.price %></span>
                <h2><%= @product.name %></h2>
                <p><%= @product.details %></p>
                <div class="row">
                  <div class="col-md-6">
                    <h2 class="uppercase">Color</h2>
                    <% @color.each do |c| %>
                    <p><%= c.name %></p>
                    <% end %>
                  </div>
                  <div class="col-md-6">
                    <h2 class="uppercase">Less is more</h2>
                    <p>Ullam dolorum iure dolore dicta fuga ipsa velit veritatis</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="fh5co-tab-content tab-content" data-tab-content="2">
              <div class="overflow">
                <%= render partial: @comments, as: :c %>
              </div>
              <% if logged_in? %>
              <div class="col-md-10 col-md-offset-1">
                <%= form_for :com,
                url: {controller: "comments", action: "create"}, remote: true do |f| %>
                  <div class="text-center">
                    <%= f.hidden_field :product_id, value: @product.id%>
                    <% if logged_in? %>
                    <%= f.hidden_field :user_id, value: current_user.id %>
                    <% end %>
                    <%= f.text_area :content, size: "50x5", class: "content-com" %>
                    <%= f.submit "Comment", class: "subcomment" %>
                  </div>
                <% end %>
              </div>
              <% else %>
                <div class=" alert alert-danger">Login to comment</div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="fh5co-started">
  <div class="container">
    <div class="row animate-box">
      <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
        <h2><%= t ".call" %></h2>
        <p><%= t ".content-call" %></p>
      </div>
    </div>
  </div>
</div>
